<div class="banner"></div>
<div class="container">
  <div class="grid-wrapper">
    <div class="card py-3 px-4 mb-3">
      <h2><%= @flat.name %></h2>
      <p><%= @flat.address %></p>
    </div>

    <div class="card py-3 px-4 mb-3">
      <h4>Book this place!</h4>
      <form action="#" class="grom-group">
        <div class="input-group mb-2">
          <div class="input-group-prepend">
            <div class="input-group-text">From</div>
          </div>
          <input type="date" name="from" id="from" class="form-control">
        </div>
        <div class="input-group mb-2">
          <div class="input-group-prepend">
            <div class="input-group-text">To</div>
          </div>
          <input type="date" name="to" id="to" class="form-control">
        </div>
        <input type="submit" value="Book" class="btn btn-success w-100">
      </form>
    </div>

    <div class="card py-3 px-4 mb-3">
      <h3>A bit more about this flat...</h3>
      <p><%= @flat.description %></p>
    </div>

    <div class="card py-3 px-4 mb-3">
      <h3>Details</h3>
      <div class="d-flex">
        <p class="card-text"><%= icon('fas','user-friends') %> <%= @flat.number_of_guests %></p>
        <p class="card-text px-4"><%= icon('fas','euro-sign') %> <%= @flat.price_per_night %></p>
      </div>
    </div>

    <div><%= link_to 'Edit flat', edit_flat_path %></div>

    <div class="card d-flex justify-content-between align-items-center flex-row py-3 px-4 mb-3">
      <h4>Share</h4>
      <div class="d-flex last-card">
        <p class="card-text px-2"><%= icon('fab','facebook') %></p>
        <p class="card-text px-2"><%= icon('fab','twitter') %></p>
        <p class="card-text px-2"><%= icon('fab','pinterest') %></p>
        <p class="card-text px-2"><%= icon('fas','envelope') %></p>
      </div>
    </div>
  </div>
</div>
